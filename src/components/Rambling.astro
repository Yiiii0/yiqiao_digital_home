  )
}

<!-- Load marked.js from CDN -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

<script define:vars={{ sortedRambling }}>
  // Consolidated helper function to get localized value
  function getLocalizedValue(value, lang) {
    if (typeof value === 'object' && value !== null && !Array.isArray(value)) {
      return value[lang] || value.en || '';
    }
    return value || '';
  }

  // Fallback markdown renderer if marked.js fails to load
  function fallbackMarkdownRenderer(markdown) {
    // Split by lines to handle block-level elements properly
    const lines = markdown.split('\n');
    let html = '';
    let inList = false;
    let inParagraph = false;
    
    for (let i = 0; i < lines.length; i++) {
      let line = lines[i];
      
      // Skip empty lines
      if (line.trim() === '') {
        if (inParagraph) {
          html += '</p>\n';
          inParagraph = false;
        }
        if (inList) {
          html += '</ul>\n';
          inList = false;
        }
        continue;
      }
      
      // Headers
      if (line.match(/^### /)) {
        if (inParagraph) { html += '</p>\n'; inParagraph = false; }
        if (inList) { html += '</ul>\n'; inList = false; }
        html += '<h3>' + line.replace(/^### /, '') + '</h3>\n';
      } else if (line.match(/^## /)) {
        if (inParagraph) { html += '</p>\n'; inParagraph = false; }
        if (inList) { html += '</ul>\n'; inList = false; }
        html += '<h2>' + line.replace(/^## /, '') + '</h2>\n';
      } else if (line.match(/^# /)) {
        if (inParagraph) { html += '</p>\n'; inParagraph = false; }
        if (inList) { html += '</ul>\n'; inList = false; }
        html += '<h1>' + line.replace(/^# /, '') + '</h1>\n';
      }
      // Lists
      else if (line.match(/^- /)) {
        if (inParagraph) { html += '</p>\n'; inParagraph = false; }
        if (!inList) {
          html += '<ul>\n';
          inList = true;
        }
        html += '<li>' + line.replace(/^- /, '').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>') + '</li>\n';
      }
      // Horizontal rule
      else if (line.match(/^---$/)) {
        if (inParagraph) { html += '</p>\n'; inParagraph = false; }
        if (inList) { html += '</ul>\n'; inList = false; }
        html += '<hr>\n';
      }
      // Paragraph
      else {
        if (inList) {
          html += '</ul>\n';
          inList = false;
        }
        if (!inParagraph) {
          html += '<p>';
          inParagraph = true;
        } else {
          html += ' ';
        }
        // Process inline formatting
        line = line
          .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
          .replace(/\*(.*?)\*/g, '<em>$1</em>')
          .replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2">$1</a>');
        html += line;
      }
    }
    
    // Close any open tags
    if (inParagraph) html += '</p>\n';
    if (inList) html += '</ul>\n';
    
    return html;
  }

  // Wait for marked.js to load and DOM to be ready
  function initializeRambling() {
    const tagFilterButtons = document.querySelectorAll('.tag-filter');
    const typeFilterButtons = document.querySelectorAll('.type-filter');
    const ramblingItems = document.querySelectorAll('.rambling-item');
    const blogModal = document.getElementById('blog-modal');
    const closeModalBtn = document.getElementById('close-modal');
    const modalContent = document.getElementById('modal-content');

    let currentTagFilter = 'all';
    let currentTypeFilter = 'all';

    // Tag filter
    tagFilterButtons.forEach(button => {
      button.addEventListener('click', function() {
        currentTagFilter = this.getAttribute('data-tag');
        tagFilterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        applyFilters();
      });
    });

    // Type filter
    typeFilterButtons.forEach(button => {
      button.addEventListener('click', function() {
        currentTypeFilter = this.getAttribute('data-type');
        typeFilterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        applyFilters();
      });
    });

    // Apply both filters
    function applyFilters() {
      ramblingItems.forEach(item => {
        const itemTag = item.getAttribute('data-tag');
        const itemType = item.getAttribute('data-type');
        const tagMatch = currentTagFilter === 'all' || itemTag === currentTagFilter;
        const typeMatch = currentTypeFilter === 'all' || itemType === currentTypeFilter;

        if (tagMatch && typeMatch) {
          item.style.display = 'block';
        } else {
          item.style.display = 'none';
        }
      });
    }

    // Render markdown content with error handling
    function renderMarkdown(content) {
      try {
        if (typeof marked !== 'undefined' && marked.parse) {
          console.log('Using marked.js for markdown rendering');
          return marked.parse(content);
        } else {
          console.warn('marked.js not available, using fallback renderer. typeof marked:', typeof marked);
          return fallbackMarkdownRenderer(content);
        }
      } catch (error) {
        console.error('Error rendering markdown:', error);
        return fallbackMarkdownRenderer(content);
      }
    }

    // Blog modal
    ramblingItems.forEach(item => {
      if (item.getAttribute('data-type') === 'blog') {
        item.addEventListener('click', function() {
          const index = parseInt(this.getAttribute('data-index'));
          const blog = sortedRambling[index];

          const currentLang = localStorage.getItem('language') || 'en';

          document.getElementById('modal-title').textContent = getLocalizedValue(blog.title, currentLang);
          document.getElementById('modal-date').textContent = new Date(blog.date).toLocaleDateString('en-US', {
            month: 'short',
            day: 'numeric',
            year: 'numeric'
          });

          const modalTag = document.getElementById('modal-tag');
          modalTag.textContent = blog.tag;

          const tagColors = {
            'AI': '#3b82f6',
            'personal': '#10b981',
            'tech': '#f59e0b',
            'work': '#8b5cf6',
            'default': '#6b7280'
          };
          const tagColor = tagColors[blog.tag] || tagColors.default;
          modalTag.style.backgroundColor = tagColor + '20';
          modalTag.style.color = tagColor;

          const blogContent = getLocalizedValue(blog.fullContent, currentLang);

          // Show loading state
          modalContent.innerHTML = '<p class="text-gray-500">Loading...</p>';

          // Render markdown
          setTimeout(() => {
            const htmlContent = renderMarkdown(blogContent);
            modalContent.innerHTML = htmlContent;
            console.log('Rendered HTML preview:', htmlContent.substring(0, 500));
            console.log('Modal content classes:', modalContent.className);
            console.log('First h1 element:', modalContent.querySelector('h1'));
            console.log('All h1 styles:', window.getComputedStyle(modalContent.querySelector('h1') || document.createElement('h1')));
          }, 0);

          blogModal.classList.remove('hidden');
          blogModal.classList.add('flex');
          document.body.style.overflow = 'hidden';
        });
      }
    });

    // Close modal
    function closeModal() {
      blogModal.classList.add('hidden');
      blogModal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }

    closeModalBtn.addEventListener('click', closeModal);
    blogModal.addEventListener('click', function(e) {
      if (e.target === blogModal) {
        closeModal();
      }
    });

    // ESC key to close
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && !blogModal.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Function to update rambling content based on language
    function updateRamblingContent(lang) {
      sortedRambling.forEach((item, index) => {
        if (item.type === 'snippet') {
          const contentEl = document.querySelector(`[data-rambling-content="${index}"]`);
          if (contentEl) {
            contentEl.textContent = getLocalizedValue(item.content, lang);
          }
        } else if (item.type === 'blog') {
          const titleEl = document.querySelector(`[data-rambling-title="${index}"]`);
          const summaryEl = document.querySelector(`[data-rambling-summary="${index}"]`);

          if (titleEl) {
            titleEl.textContent = getLocalizedValue(item.title, lang);
          }
          if (summaryEl) {
            summaryEl.textContent = getLocalizedValue(item.summary, lang);
          }
        }
      });
    }

    // Language change handler
    window.addEventListener('languageChange', (e) => {
      updateRamblingContent(e.detail.lang);
    });

    // Apply language on initial load
    const initialLang = localStorage.getItem('language') || 'en';
    updateRamblingContent(initialLang);
  }

  // Wait for DOM to be ready and give marked.js time to load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      // Give marked.js a moment to load from CDN
      setTimeout(initializeRambling, 100);
    });
  } else {
    // DOM is already ready
    setTimeout(initializeRambling, 100);
  }
</script>

